	libraw
	libopenraw
	libspectre
	libid3tag
	libultrahdr
	djvulibre
	gparted
	switcheroo
	transmageddon
)
install="$pkgname.install"
source=()
md5sums=()

package() {
    # Ensure necessary directories exist
    install -d "$pkgdir/etc/"
    install -d "$pkgdir/usr/"

    # Copy local etc and usr directories
    cp -r "$startdir/etc" "$pkgdir/"
    cp -r "$startdir/usr" "$pkgdir/"
}

