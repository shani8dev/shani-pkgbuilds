	mutter
	gpaste
	baobab
	malcontent
	rygel
	power-profiles-daemon
	switcheroo-control
	system-config-printer
	evolution-data-server
	gnome-initial-setup
	gnome-browser-connector
	gnome-backgrounds
	gnome-console
	gnome-control-center
	gnome-disk-utility
	gnome-menus
	gnome-shell
	gnome-shell-extension-appindicator
	gnome-shell-extension-caffeine
	gnome-shell-extension-gsconnect
	gnome-session
	gnome-settings-daemon
	gnome-user-share
	gnome-remote-desktop
	gnome-system-monitor
	gnome-keyring
	gnome-screenshot
	gnome-nettool
	gnome-software
	gnome-firmware
	gnome-logs
	file-roller
	nautilus
	nautilus-image-converter
	nautilus-share
	gvfs
	gvfs-afc
	gvfs-dnssd
	gvfs-goa
	gvfs-gphoto2
	gvfs-google
	gvfs-mtp
	gvfs-nfs
	gvfs-onedrive
	gvfs-smb
	gvfs-wsdd
	webp-pixbuf-loader
