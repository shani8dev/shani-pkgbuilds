source=()
md5sums=()
package() {
    # Ensure target directories exist
    install -d "$pkgdir/etc"
    install -d "$pkgdir/usr"

    # Copy etc and usr directories from the build context
    cp -r "$startdir/etc" "$pkgdir/"
    cp -r "$startdir/usr" "$pkgdir/"
}

